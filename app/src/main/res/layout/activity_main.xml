<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fruit_background"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="#03A9F4"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:text="@string/welcome_to_the_game"
            android:textColor="#111111"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--
        android:id="@+id/layout_topMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"/>

        <EditText
            android:id="@+id/resultScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editScore"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attempts_left"/>

        <EditText
            android:id="@+id/attemptsLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"/>



        <Button
            android:id="@+id/homeMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_listOfTries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_topMenu">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listOfTries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/layout_clue1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:layout_below="@+id/layout_listOfTries">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="coucou"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_column="1"
                android:background="@drawable/border"
                android:text="coucou"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_column="2"
                android:background="@drawable/border"
                android:text="coucou"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_column="3"
                android:text="coucou"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/layout_clue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3"
        android:layout_below="@+id/layout_clue1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="coucou"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_column="1"
                android:background="@drawable/border"
                android:text="coucou"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_column="2"
                android:background="@drawable/border"
                android:text="coucou"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_column="3"
                android:text="coucou"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/layout_playerChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_clue2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Fruit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fruit1"/>
        <Button
            android:id="@+id/Fruit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fruit2"/>
        <Button
            android:id="@+id/Fruit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fruit3"/>
        <Button
            android:id="@+id/Fruit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fruit4"/>
            -->


    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_zone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


        <Button
            android:id="@+id/start_button"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:onClick="startGame"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/start"
            android:textColor="#000000"
            android:textSize="24sp"
            app:backgroundTint="#03A9F4" />

        <Button
            android:id="@+id/scores_button"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/scores"
            android:textColor="#000000"
            android:textSize="24sp"
            app:backgroundTint="#03A9F4" />

        <Button
            android:id="@+id/quit_button"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:onClick="quitGame"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/quit"
            android:textColor="#000000"
            android:textSize="24sp"
            app:backgroundTint="#03A9F4" />
